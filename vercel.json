{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build",
        "buildCommand": "DISABLE_ESLINT_PLUGIN=true CI=false npm run build"
      }
    },
    {
      "src": "server/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/api.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "client/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "client/manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "client/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
} 